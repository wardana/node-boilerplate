{
  "domain":{
    "investor": "https://dashboard.amartha.com/investor-api",
    "marketplace": "https://dashboard.amartha.com/marketplace-api"
  },

  "routes": {
    "GET /v2/country-code": {
      "type": "proxy",
      "services": 
      {
        "name": "country",
        "url": "${domain.investor}/v1/country-code"
      }
    },

    "GET /v2/swift-code": {
      "type": "proxy",
      "services": 
      {
        "name": "country",
        "url": "${domain.investor}/v1/swift-code"
      }
    },

    "GET /v2/validate-username/:username": {
      "type": "proxy",
      "services": 
      {
        "name": "auth",
        "url": "${domain.investor}/v1/validate-username/:username"
      }
    },

    "GET /v2/validate-phone/:phone": {
      "type": "proxy",
      "services": 
      {
        "name": "auth",
        "url": "${domain.investor}/v1/validate-phone/:phone"
      }
    },

    "GET /v2/validate-bankaccount/:bankaccount": {
      "type": "proxy",
      "services": 
      {
        "name": "auth",
        "url": "${domain.investor}/v1/validate-bankaccount/:bankaccount"
      }
    },

    "POST /v2/register": {
      "type": "proxy",
      "services": 
      {
        "name": "auth",
        "url": "${domain.investor}/v1/register"
      }
    },

    "GET /v2/referral/:code": {
      "type": "proxy",
      "services": 
      {
        "name": "code",
        "url": "${domain.investor}/v1/referral/:code"
      }
    },

    "GET /v2/marketplace": {
      "type": "proxy",
      "middlewares":["Auth.ensureAuth"],
      "services": 
      {
        "name": "marketplace",
        "url": "${domain.marketplace}/v1/marketplace"
      }
    },

    "GET /v2/marketplace/homepage": {
      "type": "proxy",
      "services": 
      {
        "name": "marketplace",
        "url": "${domain.marketplace}/v1/marketplace/homepage"
      }
    },

    "GET /v2/marketplace/latest": {
      "type": "proxy",
      "middlewares":["Auth.ensureAuth"],
      "services": 
      {
        "name": "marketplace",
        "url": "${domain.marketplace}/v1/marketplace/latest"
      }
    },

    "GET /v2/marketplace/:id": {
      "type": "proxy",
      "middlewares":["Auth.ensureAuth"],
      "services": 
      {
        "name": "marketplace",
        "url": "${domain.marketplace}/v1/marketplace/:id"
      }
    }

  }
}